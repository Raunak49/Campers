<% layout('layouts/boilerplate') %> 
<link rel="stylesheet" href="/stylesheets/index.css">
<div class="mb-5 text-center">
    <h1 style="font-size: 5em; font-family: Open Sans;" class="gradient">ALL CAMPGROUNDS</h1>
</div>
<div id="map" style="width:100%; height:500px"></div>
            <div class="row row-cols-3 g-4">
                <% for(c of campgrounds) {%>
                <div class="col col-md-4 d-flex align-items-stretch">
                <div class="card mb-3 mt-5">
                <% if(c.images.length){ %> 
                    <img class="card-img-top" src="<%=c.images[0].url%>" crossorigin="anonymous" width="400" height="300">
                
                <% } %> 
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%=c.title%> </h5>
                        <p class="card-text"><%= c.description%></p>
                        <a class="btn btn-primary" style="margin-top: auto;" href="campgrounds/<%=c._id%>">View campground</a>
                    </div>
                </div>
            </div>
        <% } %>  
    </div>
        <script>
            const token = "<%- process.env.MAPBOX_TOKEN %>";
            const campgrounds = {features: <%-JSON.stringify(campgrounds)%>}
        </script>
    <script src="javascripts/clusterMap.js"></script>